pkgname=nall
pkgver=__VERSION__
pkgrel=1
pkgdesc="a user script-based everything notifier on the systray"
arch=(i686)
url="http://herewe.servebeer.com/nall"
license=('GPL')
depends=('gtk2' 'glib2')
optdepends=('nagios-plugins' 'telnet' 'ssh')
makedepends=('make' 'gcc' 'pkgconfig')
source=(http://herewe.servebeer.com/nall/releases/$pkgname-$pkgver.tar)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make PREFIX=/usr || return 1
  make DESTDIR="$pkgdir" PREFIX=/usr install
}
